<%- include('../adminView/layout/adminHeader.ejs')%>
      <%- include('../adminView/layout/adminSidebar.ejs')%>

            <div class="main-panel">
                  <div class="content-wrapper">
                        <div class="row ">
                              <div class="col-12 grid-margin">
                                    <div class="card">
                                          <div class="card-body">
                                                <h4 class="card-title">Order Details</h4>
                                                <div class="table-responsive">
                                                      <table class="table">
                                                            <thead>
                                                                  <tr>
                                                                        <th> No. </th>
                                                                        <th> Order Id </th>
                                                                        <th> Date </th>
                                                                        <th> Payment </th>
                                                                        <th> Amount </th>
                                                                        <th> Status </th>
                                                                  </tr>
                                                            </thead>
                                                            <tbody>
                                                                  <% if(orderData){ %>
                                                                        <% count=1 %>
                                                                        <% orderData.forEach((element)=>{ %>
                                                                              <tr>
                                                                                    <td><%= count %></td>
                                                                                    <td><%= element.uniqueId %></td>
                                                                                    <td><%= element.date %></td>
                                                                                    <td><%= element.paymentMethod %></td>
                                                                                    <td><%= element.totalAmount %></td>
                                                                                    <td style="color: green;"><%= element.status %></td>
                                                                                    <td><a href="/admin/orderDetails?id=<%= element._id %>"><button type="button" class="btn btn-inverse-primary ">Details</button></a></td>
                                                                              </tr>
                                                                        <% count++ %>
                                                                  <%})}%>
                                                            </tbody>
                                                      </table>
                                                </div>
                                          </div>
                                    </div>
                              </div>
                        </div>
                  </div>
                  <!-- content-wrapper ends -->
                  <!-- partial:partials/_footer.html -->
                  <!-- partial -->
            </div>
            <!-- main-panel ends -->
            </div>
            <!-- page-body-wrapper ends -->
            </div>
            <!-- container-scroller -->

            <%- include('../adminView/layout/adminFooter.ejs')%>