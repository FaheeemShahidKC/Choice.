<%- include('../adminView/layout/adminHeader.ejs')%>
<%- include('../adminView/layout/adminSidebar.ejs')%>

<div class="main-panel">
      <div class="content-wrapper">
            <div class="row ">
                  <div class="col-12 grid-margin">
                        <div class="card">
                              <div class="col-12 grid-margin stretch-card">
                                    <div class="card">
                                          <div class="card-body">
                                                <h4 class="card-title">Add Coupon</h4>
                                                <form method="post" action="/admin/addedCoupon" class="forms-sample">
                                                      <div class="form-group">
                                                            <label>Coupon name</label>
                                                            <input type="text" name="couponName"
                                                                  class="form-control"
                                                                  id="exampleInputName1">
                                                      </div>
                                                      <div class="form-group">
                                                            <label>Coupon code</label>
                                                            <input type="text" name="couponCode"
                                                                  class="form-control"
                                                                  id="exampleInputName1">
                                                      </div>
                                                      <div class="form-group">
                                                            <label>Discount amount</label>
                                                            <input type="number" name="discountAmount"
                                                                  class="form-control"
                                                                  id="exampleInputName1">
                                                      </div>
                                                      <div class="form-group">
                                                            <label>Expiry date</label>
                                                            <input type="date" name="activationDate"
                                                                  class="form-control"
                                                                  id="exampleInputName1">
                                                      </div>
                                                      <div class="form-group">
                                                            <label>Expiry date</label>
                                                            <input type="date" name="expiryDate"
                                                                  class="form-control"
                                                                  id="exampleInputName1">
                                                      </div>
                                                      <div class="form-group">
                                                            <label>Criteria amount</label>
                                                            <input type="number" name="criteriaAmount"
                                                                  class="form-control"
                                                                  id="exampleInputName1">
                                                      </div>
                                                      <div class="form-group">
                                                            <label>Users limit</label>
                                                            <input type="number" name="usersLimit"
                                                                  class="form-control"
                                                                  id="exampleInputName1">
                                                      </div>
                                                      <button type="submit"class="btn btn-primary mr-2">Submit</button>
                                                </form>
                                          </div>
                                    </div>
                              </div>
                        </div>
                  </div>
            </div>
            <% if(typeof message !== 'undefined'){ %>
                  <span
                    id="er2"
                    style="color: rgb(241, 7, 7); text-align: center"
                    ><%= message %></span
                  >
                  <% } %>
      </div>
      <!-- content-wrapper ends -->
      <!-- partial:partials/_footer.html -->
      <!-- partial -->
</div>
<!-- main-panel ends -->
</div>
<!-- page-body-wrapper ends -->
</div>
<!-- container-scroller -->

<%- include('../adminView/layout/adminFooter.ejs')%>