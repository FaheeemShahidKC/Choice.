<%- include('../userView/layouts/header2.ejs') %>
      <main class="main">
            <div class="page-header text-center" style="background-image: url('assets/images/page-header-bg.jpg')">
                  <div class="container">
                        <h1 class="page-title">Orders<span>Shop</span></h1>
                  </div><!-- End .container -->
            </div><!-- End .page-header -->
            <nav aria-label="breadcrumb" class="breadcrumb-nav">
                  <div class="container">
                        <ol class="breadcrumb">
                              <li class="breadcrumb-item"><a href="/home">Home</a></li>

                              <li class="breadcrumb-item active" aria-current="page">Orders</li>
                        </ol>
                  </div><!-- End .container -->
            </nav><!-- End .breadcrumb-nav -->

            <div class="page-content">
                  <div class="cart">
                        <div class="container">
                              <div class="row">
                                    <div class="col-lg-12">
                                          <% if(orders.length> 0 ){ %>
                                                <table class="table table-cart table-mobile" style="color: aliceblue;">
                                                      <thead>
                                                            <tr>
                                                                  <th>No.</th>
                                                                  <th>Date</th>
                                                                  <th>Amount</th>
                                                                  <th>Payment</th>
                                                                  <th>Status</th>
                                                                  <th>Details</th>
                                                            </tr>
                                                      </thead>

                                                      <tbody>

                                                            <% for(let i=0;i<orders.length;i++){ %>
                                                                  <tr>
                                                                        <td>
                                                                              <%= i+1 %>
                                                                        </td>
                                                                        <td>
                                                                              <%= orders[i].date.toLocaleDateString('en-US',
                                                                                    { year: 'numeric' , month: 'short' ,
                                                                                    day: '2-digit' }).replace(/\//g, '-'
                                                                                    ) %>
                                                                        </td>
                                                                        <td>â‚¹ <%= orders[i].totalAmount %>
                                                                        </td>
                                                                        <td>
                                                                              <%= orders[i].paymentMethod %>
                                                                        </td>

                                                                        <td>
                                                                              <%= orders[i].status %>
                                                                        </td>
                                                                        <td>
                                                                              <a style="color: aliceblue;" href="/viewOrderDetails?id=<%=orders[i]._id%>"
                                                                                    class=" btn-outline-dark btn-round">View
                                                                                    Details</a>
                                                                        </td>
                                                                        </td>
                                                                  </tr>

                                                      </tbody>
                                                </table><!-- End .table table-wishlist -->
                                                <% } %>
                                                      <% } else{ %>
                                                            <div class="error-content text-center" style="background-color: #2f453c;">
                                                                  <div class="container">
                                                                        <h1 class="error-title" >No
                                                                              Orders</h1>
                                                                        <!-- End .error-title -->
                                                                        <p>
                                                                              You Ordered Nothing.
                                                                        </p>
                                                                        <a href="/"
                                                                              class="btn btn-outline-primary-2 btn-minwidth-lg">
                                                                              <span>SHOPPING</span>
                                                                              <i class="icon-long-arrow-right"></i>
                                                                        </a>
                                                                  </div>
                                                                  <!-- End .container -->
                                                            </div>

                                                            <% } %>


                                    </div><!-- End .col-lg-9 -->

                              </div><!-- End .row -->
                        </div><!-- End .container -->
                  </div><!-- End .cart -->
            </div><!-- End .page-content -->
      </main><!-- End .main -->


      <%- include('../userView/layouts/footer2.ejs') %>