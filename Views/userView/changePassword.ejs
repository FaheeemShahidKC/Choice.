<%- include('../userView/layouts/header.ejs')%>

      <body>

            <div class="wrapper-login" style="background-image: url('');">
                  <div class="inner-login">
                        <div class="image-holder">
                              <img class="img-login" src="/userSide/images/sofa.png" alt="">
                        </div>
                        <form method="post" action="/newPassword">
                              <h3 class="texts-login">Change password</h3>
                              <div class="form-wrapper-login">
                                    <input type="password" name="newPassword" placeholder="New Password"
                                          class="form-control-login style-login">
                                    <i class="zmdi zmdi-lock"></i>
                              </div>
                              <div class="form-wrapper-login">
                                    <input type="password" name="newConfirmPassword" placeholder="Confirm Password"
                                          class="form-control-login style-login">
                                    <i class="zmdi zmdi-lock"></i>
                              </div>
                              <P style="color: red;"><%=locals.error?error:""%></P>
                              <button type="submit" class="style-login button-login">Done
                                    <i class="zmdi zmdi-arrow-right"></i>
                              </button>
                        </form>
                  </div>
            </div>

      </body>

