<%- include('../userView/layouts/header2.ejs') %>


  <main class="main">
    <div class="page-header text-center" style="background-image: url('assets/images/page-header-bg.jpg')">
      <div class="container">
        <h1 class="page-title">Orders<span>Details</span></h1>
      </div>
    </div>
    <nav aria-label="breadcrumb" class="breadcrumb-nav">
      <div class="container">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="index.html">Home</a></li>
          <li class="breadcrumb-item"><a href="/orders">Orders</a></li>
          <li class="breadcrumb-item active" aria-current="page">Details</li>
        </ol>
      </div>
    </nav>

    <div class="page-content">
      <div class="checkout">
        <div class="container">
          <div>
            <% if (orders.status=="delivered" ) { %>
              <div class="col-6 col-lg-4 col-xl-2">
                <div class="btn-wrap">
                  <a href="/invoice/<%= orders._id %>" class="btn btn-outline-dark btn-round">Download Invoice</a>
                </div>
              </div>
              <% } %>

                <div class="row">
                  <aside class="col-lg-12">
                    <div class="summary">
                      <h3 class="summary-title">Your Order</h3>

                      <table class="table table-summary">
                        <thead>
                          <tr>
                            <th>Products</th>
                            <th>Price</th>
                          </tr>
                        </thead>
                        <tbody>
                          <% if (orders.products.length> 0) {
                            orders.products.forEach((data) => { %>
                            <tr>
                              <td>
                                <h6>
                                  <%= data.productId.name %>&nbsp&nbsp<span
                                      style="border-radius: 50%; font-weight: 100; background-color: #c96; padding: 3px 7px;"
                                      class="badge">
                                      <%= data.count %>
                                    </span>
                                </h6>
                              </td>
                              <td>â‚¹ <%= data.totalPrice %>
                              </td>
                            </tr>
                            <% }) %>
                              <% } %>
                                <tr class="summary-subtotal">
                                  <td>Billing Address: &nbsp</td>
                                  <td>
                                    <%= address.address[0].fullname %><br>
                                      <%= address.address[0].mobile %><br>
                                        <%= address.address[0].email %><br>
                                          <%= address.address[0].houseName %><br>
                                            <%= address.address[0].city %><br>
                                              <%= address.address[0].state %><br>
                                                <%= address.address[0].pin %>
                                  </td>
                                </tr>
                                <tr>
                                  <td>Ordered Date:</td>
                                  <td>
                                    <%= orders.date.toLocaleDateString('en-US', { year: 'numeric' , month: 'short' ,
                                      day: '2-digit' }).replace(/\//g, '-' ) %>
                                  </td>
                                </tr>
                                <tr>
                                  <td>Order Status:</td>
                                  <td>
                                    <%= orders.status %>
                                  </td>
                                </tr>
                                <tr>
                                  <td>Payment Method:</td>
                                  <td>
                                    <%= orders.paymentMethod %>
                                  </td>
                                </tr>
                                <% if (orders.status=="Delivered" ) { %>
                                  <tr>
                                    <td>Return Policy:</td>
                                    <td>If you've received them in a condition that is physically damaged, has missing
                                      parts or accessories <br> you can return the product within <b
                                        style="color: red;">
                                        <%= 7-daysDiff %> Days
                                      </b>.</td>
                                  </tr>
                                  <% } %>
                                    <tr class="summary-total">
                                      <td>Total:</td>
                                      <td><b>
                                          <%= orders.totalAmount %>
                                        </b></td>
                                    </tr>
                        </tbody>
                      </table>
                      <% if (orders.status=="placed" || orders.status=="pending" ) { %>
                        <a class="nav-link" id="tab-address-link" data-toggle="tab" href="#tab-address" role="tab"
                          aria-controls="tab-address" aria-selected="false"> <button type="button"
                            class="btn btn-outline-primary-2 btn-order btn-block">
                            <span class="btn-text">Cancel Order</span>
                            <span class="btn-hover-text">Proceed to Cancel the Order</span>
                          </button></a>
                        <% } else if (orders.status=="Delivered" && daysDiff <=7) { %>
                          <a class="nav-link" id="tab-return-link" data-toggle="tab" href="#tab-return" role="tab"
                          aria-controls="tab-return" aria-selected="false"><button type="button" class="btn btn-outline-primary-2 btn-order btn-block"
                            data-toggle="modal" data-target="#returnReasonModal">
                            <span class="btn-text">Return Product</span>
                            <span class="btn-hover-text">Proceed to Return the Product</span>
                          </button></a>
                          <% } %>
                    </div>
                  </aside>.
                  <% if (orders.status=="placed" || orders.status=="pending" ) { %>
                  <div style="width: 1180px;" class="tab-pane fade" id="tab-address" role="tabpanel"
                    aria-labelledby="tab-address-link">
                    <div id="cancel" class="summary">
                      <form action="/cancelOrder?id=<%=orders._id%>" method="post">
                        Enter the reason for cancellation <br><br>
                        <input type="text" style="width: 1075px;" name="cancelReason"><br><br>
                        <!-- Add a dropdown menu for refund method -->
                        <label for="refundMethod">Select Refund Method:</label>
                        <select id="refundMethod" name="refundMethod">
                          <option value="wallet">Refund to Wallet</option>
                          <option value="bank">Refund to Bank Account</option>
                        </select><br><br>
                        <button type="submit" class="btn btn-outline-primary-2 btn-order btn-block">
                          <span>Confirm</span>
                        </button>
                      </form>
                    </div>
                  </div>
                  <% } else if (orders.status=="Delivered" && daysDiff <=7) { %>
                    <div style="width: 1180px;" class="tab-pane fade" id="tab-return" role="tabpanel" aria-labelledby="tab-return-link">
                      <div id="cancel" class="summary">
                        <form action="/returnOrder?id=<%=orders._id%>" method="post">
                          Enter the reason for Returning <br><br>
                          <input type="text" style="width: 1075px;" name="returnReason"><br><br>
                          <!-- Add a dropdown menu for refund method -->
                          <label for="refundMethod">Select Refund Method:</label>
                          <select id="refundMethod" name="refundMethod">
                            <option value="wallet">Refund to Wallet</option>
                            <option value="bank">Refund to Bank Account</option>
                          </select><br><br>
                          <button type="submit" class="btn btn-outline-primary-2 btn-order btn-block">
                            <span>Confirm</span>
                          </button>
                        </form>
                      </div>
                    </div>                    
                  <% } %>
                </div>
          </div>
        </div>
      </div>
  </main>

  <%- include('../userView/layouts/footer2.ejs') %>