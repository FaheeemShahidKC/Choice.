    </style>
    <div class="page-wrapper">
        <header class="header">
            <div class="header-middle sticky-header">
                <div class="container">
                    <div class="header-left">

                        <a href="index.html" class="logo" style="font-size: 30px;">
                            Choice.
                        </a>

                        <nav class="main-nav">
                            <ul class="menu sf-arrows">
                                <li class="megamenu-container active">
                                    <a href="/home">Home</a>
                                </li>
                                <li>
                                    <a href="/shop">Shop</a>
                                </li>
                            </ul><!-- End .menu -->
                        </nav><!-- End .main-nav -->
                    </div><!-- End .header-left -->

                    <div class="header-right">
                    </div><!-- End .header-right -->
                </div><!-- End .container -->
            </div><!-- End .header-middle -->
        </header><!-- End .header -->

        <main class="main">
            <nav aria-label="breadcrumb" class="breadcrumb-nav border-0 mb-0">
                <div class="container d-flex align-items-center">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="">Home</a></li>
                        <li class="breadcrumb-item active" aria-current="page">
                            <%= prodectData.name %>
                        </li>
                    </ol>
                </div><!-- End .container -->
            </nav><!-- End .breadcrumb-nav -->

            <div class="page-content">
                <div class="container">
                    <div class="product-details-top">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="product-gallery product-gallery-vertical">
                                    <div class="row">
                                        <figure class="product-main-image">
                                            <img id="product-zoom" src="/products/crop/<%= prodectData.images.image1 %>"
                                                data-zoom-image="/products/crop/<%= prodectData.images.image1 %>"
                                                alt="product image">

                                            <a href="#" id="btn-product-gallery" class="btn-product-gallery">
                                                <i class="icon-arrows"></i>
                                            </a>
                                        </figure><!-- End .product-main-image -->

                                        <div id="product-zoom-gallery" class="product-image-gallery">
                                            <a class="product-gallery-item active" href="#"
                                                data-image="/products/crop/<%= prodectData.images.image1 %>"
                                                data-zoom-image="/products/crop/<%= prodectData.images.image1 %>">
                                                <img src="/products/crop/<%= prodectData.images.image1 %>"
                                                    alt="product image">
                                            </a>

                                            <a class="product-gallery-item" href="#"
                                                data-image="/products/crop/<%= prodectData.images.image2 %>"
                                                data-zoom-image="/products/crop/<%= prodectData.images.image2 %>">
                                                <img src="/products/crop/<%= prodectData.images.image2 %>"
                                                    alt="product cross">
                                            </a>

                                            <a class="product-gallery-item" href="#"
                                                data-image="/products/crop/<%= prodectData.images.image3 %>"
                                                data-zoom-image="/products/crop/<%= prodectData.images.image3 %>">
                                                <img src="/products/crop/<%= prodectData.images.image3 %>"
                                                    alt="product with model">
                                            </a>

                                            <a class="product-gallery-item" href="#"
                                                data-image="/products/crop/<%= prodectData.images.image4 %>"
                                                data-zoom-image="/products/crop/<%= prodectData.images.image4 %>">
                                                <img src="/products/crop/<%= prodectData.images.image4 %>"
                                                    alt="product back">
                                            </a>
                                        </div><!-- End .product-image-gallery -->
                                    </div><!-- End .row -->
                                </div><!-- End .product-gallery -->
                            </div><!-- End .col-md-6 -->

                            <div class="col-md-6">
                                <div class="product-details">
                                    <h1 class="product-title">
                                        <%= prodectData.name %>
                                    </h1><!-- End .product-title -->

                                    <div class="ratings-container">
                                        <%if(averageRating){%>
                                            <div class="">
                                                <div class="ratings-container">
                                                    <span class="fa fa-star checked"> &nbsp; <%=averageRating%></span>
                                                </div>
                                            </div>
                                            <%}%>
                                    </div><!-- End .rating-container -->

                                    <div class="product-price">
                                        â‚¹<%= prodectData.price %>
                                    </div><!-- End .product-price -->

                                    <div class="product-content">
                                        <p>
                                            <%= prodectData.description %>
                                        </p>
                                    </div><!-- End .product-content -->
                                    <div class="product-details-action">
                                        <a onclick="addToCart('<%= prodectData._id %>')"
                                            class="btn-product btn-cart"><span>add to cart</span></a>

                                        <div class="details-action-wrapper">
                                            <a onclick="addToWishlist('<%= prodectData._id %>')"
                                                class="btn-product btn-wishlist" title="Wishlist"><span>Add to
