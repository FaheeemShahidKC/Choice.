                    </div><!-- End .product -->
                </div><!-- End .owl-carousel -->
            </div><!-- End .container -->
    </div><!-- End .page-content -->
    </main><!-- End .main -->
    </div><!-- End .page-wrapper -->
    <div class="bor10 m-t-50 p-t-43 p-b-40">
        <!-- Tab01 -->
        <div class="tab01">
            <!-- Nav tabs -->
            <ul class="nav nav-tabs" role="tablist">
                <li class="nav-item p-b-10">
                    <a class="nav-link active" data-toggle="tab" href="#description" role="tab">Description</a>
                </li>

                <li class="nav-item p-b-10">
                    <a class="nav-link" data-toggle="tab" href="#reviews" role="tab">Reviews (<%= reviews.length %>)</a>
                </li>
            </ul>

            <!-- Tab panes -->
            <div class="tab-content p-t-43">
                <!-- - -->
                <div class="tab-pane fade show active" id="description" role="tabpanel">
                    <div class="how-pos2 p-lr-15-md" style="margin-bottom: 150px;">
                        <p class="stext-102 cl6">
                            <%= prodectData.description%>
                        </p>
                    </div>
                </div>

                <!-- - -->
                <div class="tab-pane fade" id="reviews" role="tabpanel">
                    <div class="row" id="reloadArea">
                        <div class="col-sm-10 col-md-8 col-lg-6 m-lr-auto">
                            <div class="p-b-30 m-lr-15-sm">
                                <!-- Review -->
                                <% reviews.forEach(function(review) { %>
                                    <div class="flex-w flex-t p-b-68" style="padding-left: 60px;">
                                        <div class="size-207"
                                            style="background-color: rgb(240, 240, 240); padding-left: 10px;">
                                            <div class="flex-w flex-sb-m p-b-17">
                                                <p style="color: black;">
                                                    <%= review.user.name %>
                                                </p>

                                                <div class="ratings-container">
                                                    <span class="fa fa-star checked"> &nbsp; <%=review.rating%></span>
                                                </div>
                                            </div>
                                            <p class="stext-102 cl6">
                                                <%= review.comment %>
                                            </p>
                                            <input id="tyrating" value="<%= review.rating %>" hidden>
                                        </div>
                                        <br><br>
                                    </div>
                                    <% }); %>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <script>
        var ratingElement = document.getElementById("ratingElement");
        var ratingInput = document.getElementById("tyrating");
        var rating = ratingInput.value * 10 * 2
        ratingElement.style.width = rating + "%";
    </script>

    <script>
        function addToCart(productId) {

            $.ajax({
                url: "/addToCart",
                method: "post",
                data: {
                    id: productId,
                },
                success: (response) => {
                    if (response.login == true) {
                        swal
                            .fire({
                                icon: "warning",
                                title: "Please Login",
                                confirmButtonColor: "#3085d6",
                                confirmButtonText: "Login",
                                showCancelButton: true,
                                cancelButtonColor: "#d33",
                                text: response.message,
                            })
                            .then((result) => {
                                if (result.isConfirmed) {
                                    window.location.href = "/login";
                                }
                            });
                    } else if (response.success) {
                        swal.fire({
                            position: "center",
                            icon: "success",
                            title: "Product added to cart",
                            showConfirmButton: false,
                            timer: 1500,
                        });
                    } else if (response.exist) {

                        Swal.fire({
                            icon: 'warning',
                            title: 'Item Already in Cart',
                            text: 'This item is already in your cart.',
                        });
                    } else if (response.quantity) {
                        Swal.fire({
                            icon: 'warning',
                            title: 'Lack of stock',
                            text: 'This item is out of stock.',
                        });
                    }
                },
            });
        }
        function addToWishlist(productId) {

            $.ajax({
                url: "/addToWishlist",
                method: "post",
                data: {
                    id: productId,
                },
                success: (response) => {
                    if (response.login == true) {
                        swal
                            .fire({
                                icon: "warning",
                                title: "Please Login",
                                confirmButtonColor: "#3085d6",
                                confirmButtonText: "Login",
                                showCancelButton: true,
                                cancelButtonColor: "#d33",
                                text: response.message,
                            })
                            .then((result) => {
                                if (result.isConfirmed) {
                                    window.location.href = "/login";
                                }
                            });
                    } else if (response.success) {
                        swal.fire({
                            position: "center",
                            icon: "success",
                            title: "Product added to cart",
                            showConfirmButton: false,
                            timer: 1500,
                        });
                    } else if (response.exist) {

                        Swal.fire({
                            icon: 'warning',
                            title: 'Item Already in Cart',
                            text: 'This item is already in your cart.',
                        });
                    }
                },
            });
        }
    </script>

