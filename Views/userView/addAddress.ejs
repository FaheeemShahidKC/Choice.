<%- include('../userView/layouts/header2.ejs') %>
    <div class="page-wrapper">
        <main class="main" style="padding-top: 50px;">
            <div class="page-content">
                <div class="dashboard">
                    <div class="container">
                        <div class="row justify-content-center">
                            <div class="col-md-6">
                                <div class="tab-content">
                                    <!-- Add Address Form -->
                                    <div class="form-wrapper">
                                        <h2 style="color: aliceblue;">Add Address</h2>
                                        <form action="/addedAddress" method="post">
                                            <div class="form-group">
                                                <label for="addName" style="color: aliceblue;">Full Name *</label>
                                                <input type="text" class="form-control"style="color: black;" id="addName" name="addName"
                                                    >
                                            </div>

                                            <div class="form-group">
                                                <label for="addEmail"style="color: aliceblue;" >Email *</label>
                                                <input type="text" class="form-control"style="color: black;" id="addEmail" name="addEmail"
                                                    >
                                            </div>

                                            <div class="form-group">
                                                <label for="addMobile" style="color: aliceblue;">Mobile Number</label>
                                                <input type="text" class="form-control"style="color: black;" id="addMobile"
                                                    name="addMobile">
                                            </div>

                                            <div class="form-group">
                                                <label for="addHouseName"style="color: aliceblue;">House Name</label>
                                                <input type="text" class="form-control"style="color: black;" id="addHouseName"
                                                    name="addHouseName">
                                            </div>

                                            <div class="form-row">
                                                <div class="form-group col-md-6">
                                                    <label for="addCity"style="color: aliceblue;">City</label>
                                                    <input type="text" class="form-control" id="addCity"style="color: black;" name="addCity">
                                                </div>

                                                <div class="form-group col-md-6">
                                                    <label for="addState"style="color: aliceblue;">State</label>
                                                    <input type="text" class="form-control" id="addState" style="color: black;"
                                                        name="addState">
                                                </div>
                                            </div>

                                            <div class="form-group">
                                                <label for="addPincode"style="color: aliceblue;">Pincode</label>
                                                <input type="text" class="form-control" id="addPincode" style="color: black;"
                                                    name="addPincode">
                                                    <p style="color: red;"><%= typeof error != "undefined"? error : ""%></p>
                                            </div>

                                            <div class="form-group text-center">
                                                <button type="submit" class="btn btn-primary">
                                                    SAVE CHANGES <i class="icon-long-arrow-right"></i>
                                                </button>
                                                <a href="/profile" class="btn btn-secondary">
                                                    CANCEL <i class="icon-long-arrow-right"></i>
                                                </a>
                                            </div>
                                        </form>
                                    </div><!-- .End .tab-pane (Add Address Form) -->
                                </div>
                            </div><!-- End .col-md-6 -->
                        </div><!-- End .row -->
                    </div><!-- End .container -->
                </div><!-- End .dashboard -->
            </div><!-- End .page-content -->
        </main><!-- End .main -->
    </div><!-- End .page-wrapper -->

    <%- include('../userView/layouts/footer2.ejs') %>