<%- include('../userView/layouts/header2.ejs') %>
    <div class="page-wrapper" style=" margin: 50px;">
        <main class="main">
            <div class="page-content">
                <div class="dashboard">
                    <div class="container">
                        <div class="row justify-content-center">
                            <div class="col-md-6">
                                <div class="tab-content">
                                    <div class="form-wrapper">
                                        <h3 style="color: aliceblue;">Edit Profile</h3>
                                        <% if(typeof userProfile[0] != 'undefined') { %>
                                            <div id="profileChangeDiv" style="display: block;">
                                                <form action="/profileUpdated?id=<%= userProfile[0]._id %>"
                                                    method="post">

                                                    <div class="form-group">
                                                        <label for="addName" style="color: aliceblue;">Full Name *
                                                        </label>
                                                        <input type="text" class="form-control" id="name"
                                                            style="color: black;" value="<%= userProfile[0].name %>"
                                                            name="addName" >
                                                    </div>

                                                    <div class="form-group">
                                                        <label for="addEmail" style="color: aliceblue;">Email *</label>
                                                        <input type="text" class="form-control" id="email"
                                                            style="color: black;" value="<%= userProfile[0].email %>"
                                                            name="addEmail" >
                                                    </div>

                                                    <div class="form-group">
                                                        <label for="addMobile" style="color: aliceblue;">Mobile Number</label>
                                                        <input type="text" class="form-control" id="mobile"
                                                            style="color: black;" value="<%= userProfile[0].mobile %>"
                                                            name="addMobile" >
                                                    </div>

                                                    <a href="/forgetPassword?id=<%= userProfile[0]._id %>"
                                                        class="icon-edit">forget password?</a>
                                                        <BR></BR>
                                                    <p style="font-weight: 500;">Only if need to change password</p>
                                                    <div class="form-group">
                                                        <label for="addMobile" style="color: aliceblue;">Current
                                                            Password</label>
                                                        <input type="password" style="color: black;" class="form-control" id="currentPasssword"
                                                            value="" name="currentPassword">
    
                                                    </div>
    
                                                    <div class="form-group">
                                                        <label for="addMobile" style="color: aliceblue;">New
                                                            Password</label>
                                                        <input type="password" style="color: black;" class="form-control" id="newPassword"
                                                            value="" name="newPassword">
                                                            <p style="color: red;"><%= typeof error != "undefined"? error : ""%></p>
                                                    </div>    

                                                    <div class="form-group text-center">
                                                        <button type="submit" class="btn btn-primary">
                                                            SAVE CHANGES <i class="icon-long-arrow-right"></i>
                                                        </button>
                                                        <a href="/profile" class="btn btn-secondary">
                                                            CANCEL <i class="icon-long-arrow-right"></i>
                                                        </a>
                                                    </div>
                                                    
                                                </form>
                                            </div>
                                            <% } %>
                                    </div><!-- .End .tab-pane (Add Address Form) -->
                                </div>
                            </div><!-- End .col-md-6 -->
                        </div><!-- End .row -->
                    </div><!-- End .container -->
                </div><!-- End .dashboard -->
            </div><!-- End .page-content -->
        </main><!-- End .main -->
    </div><!-- End .page-wrapper -->
    <script>
        const divPassword = document.getElementById("changepass")
        const divProfile = document.getElementById("profileChangeDiv")

        function changePassDiv() {
            divPassword.style.display = "block"
            divProfile.style.display = "none"
        }
    </script>
    <%- include('../userView/layouts/footer2.ejs') %>